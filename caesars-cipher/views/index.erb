<div class="wrapper">
  <div class="headline">
    <h1>Caesar's Cipher</h1>
  </div>
  <div class="row">
    <form action="/" method="POST">
      <input type="text" name="string" placeholder="Enter your phrase here" id="phrase" value="<%= cipher.string %>" />
      <input type="text" name="step" placeholder="Step" id="step" value="<%= cipher.step %>" />
      <button type="submit">Encode!</button>
    </form>
  </div>

  <div class="message">
    <p><%= message %></p>
  </div>

</div>
